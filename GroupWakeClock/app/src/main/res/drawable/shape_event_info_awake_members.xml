<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="top|center">

        <rotate
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fromDegrees="45">
            <shape
                android:shape="rectangle">
                <corners
                    android:topLeftRadius="0dp"
                    android:radius="0dp" />
                <size
                    android:width="50dp"
                    android:height="50dp" />
                <solid
                    android:color="#CE00E676"/>
                <stroke
                    android:width="0.1dp"
                    android:color="#5B111111"/>
            </shape>
        </rotate>

    </item>

    <item
        android:gravity="center">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="10dp" />
            <size
                android:width="350dp"
                android:height="80dp" />

            <solid
                android:color="#00E676"/>
            <stroke
                android:width="0.1dp"
                android:color="#5B111111"/>
        </shape>

    </item>

</layer-list>