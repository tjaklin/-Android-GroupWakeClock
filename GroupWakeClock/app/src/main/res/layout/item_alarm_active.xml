<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="5sp"
    android:background="@drawable/shape_item_active"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"
        android:id="@+id/guideline"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"

        android:gravity="center"
        android:paddingStart="5sp"

        android:text="idajoid"
        android:textSize="18dp"
        android:textStyle="italic"
        android:id="@+id/tv_datetime"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_datetime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"

        android:gravity="center"
        android:paddingStart="5sp"

        android:text="dko"
        android:textSize="15sp"
        android:textStyle="bold"

        android:id="@+id/tv_groupname"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_type"

        android:text="Alarm Type:"
        android:textStyle="italic" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"

        android:gravity="end"
        android:paddingStart="5dp"

        android:text="at"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tv_type"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_type"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_complexity"


        android:text="Alarm Complexity:"
        android:textStyle="italic" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_type"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"

        android:gravity="end"
        android:paddingStart="5dp"

        android:text="ac"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/tv_complexity"/>

</androidx.constraintlayout.widget.ConstraintLayout>