<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6A3D5AFE"
        android:padding="20dp"
        android:id="@+id/ll_userInfo">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"

            android:layout_gravity="center"
            android:gravity="center"

            android:textSize="20dp"
            android:hint="Username"
            android:id="@+id/tv_username"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"

            android:layout_gravity="center"

            android:src="@drawable/ic_friend_add_24dp"
            android:background="#6A3D5AFE"
            android:id="@+id/ib_memberInfo" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/ll_userInfo"
        android:hint="Pick member's alarm type and complexity:"
        android:id="@+id/tv_info"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info"
        android:background="#4FFFEA00"
        android:orientation="horizontal"
        android:id="@+id/ll_alarmInfo">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:hint="type" />

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:id="@+id/spnr_type" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:hint="complexity" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/spnr_complexity" />

    </LinearLayout>

</RelativeLayout>
